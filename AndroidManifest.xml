<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wettermedia.delivery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:screenOrientation="portrait"
            android:name=".WetterMediaIntro"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MainWindow"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAINWINDOW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
          
        <activity
            android:screenOrientation="portrait"
            android:name=".WetterMediaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CLEARSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
             <activity
                 android:screenOrientation="portrait"
            android:name=".History"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCHED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Single List Item View -->
        <activity
            android:screenOrientation="portrait"
            android:name=".SingleMenuItemActivity"
            android:label="Single Menu Item" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission> 
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    

</manifest>