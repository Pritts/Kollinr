<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backend"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="135dip"
        android:layout_marginTop="-15dip"
        android:src="@drawable/logo" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dip" >

        <EditText
            android:id="@+id/kolliidnr"
            android:layout_width="274dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:padding="5dip"
            android:textColor="#2cb3de"
            android:textSize="18dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/provider"
            android:layout_width="96dp"
            android:layout_height="42dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:background="@drawable/valjforetag"
            android:text="Välj Företag"
            android:textColor="#FFFFFF"
            android:textSize="10dip" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="20dip"
        android:gravity="center" >

        <Button
            android:id="@+id/searchbutton"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:background="@drawable/sokbutton"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/tidigare"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:background="@drawable/minasokningar"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="7dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dip"
            android:text="Spåra mitt kollipaket samarbetar med:"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/posten"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:src="@drawable/posten" />
        
        <!-- 
        <ImageView
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:src="@drawable/dhl" />

        <ImageView
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:src="@drawable/schenker" />

        <ImageView
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:src="@drawable/ups" />
             -->
    </LinearLayout>

</LinearLayout>